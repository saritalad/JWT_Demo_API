@page
@model RazorDbFirstEFDemo.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>@@Html.DisplayNameFor()  and @@Html.DisplayFor are Html Helper methods </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productlist[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productlist[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productlist[0].Catid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productlist[0].Mfd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model.Productlist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mfd)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
